<% semantic_form_for @reply do |f| %>

	
	<% f.inputs "Engagement party (28 August 2010, Canada)" do %>
		<%= f.input :engagement, :label => 'Will you be attending the engagement party?', :as => :radio %>
		<%= f.input :engagement_adults, :label => 'Adults', :input_html => { :size => 7 } %>
		<%= f.input :engagement_children, :label => 'Children', :input_html => { :size => 7 } %>
	<% end %>
	
	<% f.inputs "Wedding (4 September 2010, England)" do %>
		<%= f.input :wedding, :label => 'Will you be attending the wedding?', :as => :radio %>
		<%= f.input :wedding_adults, :label => 'Adults', :input_html => { :size => 7 } %>
		<%= f.input :wedding_children, :label => 'Children', :input_html => { :size => 7 } %>
		<!-- <%= f.input :camping, :label => 'Do you fancy some comfortable/rustic camping?', :as => :radio %> -->
	<% end %>
	
	<% f.inputs "Who's replying?" do %>
		<%= f.input :name, :as => :string, :label => "Please add the names of everyone coming" %>
		<%= f.input :diet, :label => 'Are there any dietary requirements?' %>
		<%= f.input :code, :label => 'Please can you type in the number from the back of the invitation?' %>
	<% end %>
	
	<% f.inputs "Add a note?" do %>
		<%= f.input :notes, :label => 'Anything else to add?', :input_html => { :class => 'autogrow' }%>
	<% end %>
		
	<% f.buttons do %>
		<%= f.commit_button 'Send reply' %>
	<% end %>	
	
<% end %>
